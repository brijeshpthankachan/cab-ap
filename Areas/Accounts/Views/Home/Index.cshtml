@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <style>
        body, html {
            margin: 0px;
            padding: 0px;
        }

    </style>

</head>
<body>


<div class=" container">

        <H3 class="pt-5">Welcome :-)</H3>

    <div class="  pt-5 ">
        <div >

           


            <div >


                <form method="post">
                        <h4 class="my-4">Login</h4>

                <label class="form-label">Email Id</label>
                <input asp-for="Email" class="form-control" type="text"/>

                <label class="form-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" />
                
                                <div class="d-flex justify-content-end pt-3">
                <button type="submit" class="btn btn-primary">Sign In</button>
            </div>

            </form>

                <div class="d-flex align-items-center my-3">

                    <div class="d-flex flex-column w-100 ">
                        <a asp-area="Accounts" asp-controller="Home" asp-action="RegisterDriver" class="btn btn-primary" >Register As Driver</a>

                        <a asp-area="Accounts" asp-controller="Home" asp-action="RegisterUser" class="btn btn-primary mt-4">Register As User</a>
                    </div>
                </div>


        </div>

    </div>


</div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>