@model RegisterUserViewModel


<div class="  pt-5 mt-5 container">

    <div class="d-flex justify-content-end  py-4">

        <input type="button" value="Delete Account" class="btn btn-primary">
    </div>

    <form method="post">

        <label class="form-label">First Name</label>
        <input asp-for="FirstName" type="text" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>

        <label class="form-label">Last Name</label>
        <input asp-for="LastName" type="text" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
        
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="text" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="PhoneNumber" class="form-label">Phone number</label>
        <input asp-for="PhoneNumber" type="text" class="form-control">

        <input asp-for="UserId" type="text" class="form-control" hidden>

        <div class="d-flex justify-content-end pt-5">
            <input type="submit" value="Update Details" class="btn btn-primary">

        </div>

    </form>

</div>