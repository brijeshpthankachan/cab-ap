@model RegisterDriverViewModel
<div class="pt-5 mt-5 container">

    <form method="post">

        <label class="form-label" asp-for="Source">Enter Source</label>
        <input class="form-control" type="text" asp-for="Source">
        <span asp-validation-for="Source" class="text-danger"></span>

        <label class="form-label" asp-for="Destination">Enter Destination</label>
        <input class="form-control" type="text" asp-for="Destination">
        <span asp-validation-for="Destination" class="text-danger"></span>

        <div class="mt-3">
          
            <div class="d-flex justify-content-between pt-3 align-items-center">
                <span style="width:180px; " class="btn btn-light ">Driver's  Name</span>
                <input class="btn btn-light " type="text" asp-for="FirstName" readonly>
            </div>

            <div class="d-flex justify-content-between pt-3">
                <input style="width:180px; " class="btn btn-light" style="margin-right: 20px; " type="text" asp-for="CabName" readonly>

                <input  class=" btn btn-light text-bg-dark" type="text" asp-for="CabType" readonly>
            </div>

            <div class="d-flex justify-content-between pt-3 align-items-center">
                <span style="width:180px; " class="btn btn-light">Driver's  Number</span>
                <input class="btn btn-light text-bg-dark" type="text" asp-for="PhoneNumber" readonly>
            </div>
        </div>



        <input class="form-control d-none" type="text" asp-for="CurrentUserID" readonly>

        <input class="form-control d-none" type="text" asp-for="ApplicationUserID" readonly>




        <div class="d-flex pt-4 justify-content-end">
            <input type="submit" class="btn btn-primary" value="Confirm Booking">
        </div>



    </form>

</div>